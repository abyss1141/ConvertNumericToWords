@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <h2 class="text-center">Convert Numeric Value to Words</h2>
                <form asp-controller="Home" asp-action="ConvertNumeric" method="post">
                    <div class="form-group">
                        <label for="numericValue">Enter Numeric Value:</label>
                        <input type="text" id="numericValue" name="numericValue" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Convert</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
